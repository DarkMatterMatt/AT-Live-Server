{
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,

        "noImplicitAny": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "strictBindCallApply": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": false,

        "outDir": "dist",
        "baseUrl": "./",
        "paths": {
            "*" : ["src/types/*"]
        }
    },
    "include": [
        "src"
    ]
}
